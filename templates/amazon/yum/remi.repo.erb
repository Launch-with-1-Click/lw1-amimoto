[remi]
name=Les RPM de remi pour Enterprise Linux 6 - $basearch
<% if node[:yum][:repo][:amimoto_repo]  %>
baseurl=<%= node[:yum][:repo][:remi][:php][:baseurl] %>
<% else %>
#baseurl=<%= node[:yum][:repo][:remi][:php][:baseurl] %>
mirrorlist=<%= node[:yum][:repo][:remi][:php][:mirrorlist] %>
<% end %>
enabled=1
gpgcheck=1
priority=10
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi
skip_if_unavailable = 1
keepcache = 0

[remi-php55]
name=Les RPM de remi de PHP 5.5 pour Enterprise Linux 6 - $basearch
<% if node[:yum][:repo][:amimoto_repo]  %>
baseurl=<%= node[:yum][:repo][:remi][:php55][:baseurl] %>
<% else %>
#baseurl=<%= node[:yum][:repo][:remi][:php55][:baseurl] %>
mirrorlist=<%= node[:yum][:repo][:remi][:php55][:mirrorlist] %>
<% end %>
# WARNING: If you enable this repository, you must also enable "remi"
<% if node[:mod_php7][:enabled] %>
enabled=0
<% else %>
<% if node[:phpfpm][:version] == '55' %>
enabled=1
<% else %>
enabled=0
<% end %>
<% end %>
gpgcheck=1
priority=10
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi

